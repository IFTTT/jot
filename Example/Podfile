source 'https://github.com/CocoaPods/Specs.git'

xcodeproj 'JotDemo'

platform :ios, '8.0'

def install_pods
  pod "jot", :path => "../jot.podspec"
end

target 'JotDemo', :exclusive => true do
  install_pods
end

target 'JotDemoTests', :exclusive => true do
  install_pods
  pod 'Specta'
  pod 'Expecta'
  pod 'Expecta+Snapshots'
  pod 'OCMockito'
end